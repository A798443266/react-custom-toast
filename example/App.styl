.App
  width 600px
  margin 0 auto
  height 100%
  display flex
  flex-direction column
  justify-content center

html, body, #root
  width 100%
  height 100%

.btn
  outline none
  padding 8px 16px
  background-color #fff
  border-radius 4px
  cursor pointer
  margin-right 12px
  border none

.btn.info
  background-color #00B4FF
  color #f4f4f4

.btn.warning
  background-color #FCCA46
  color #f4f4f4

.btn.error
  background-color #FF1D23
  color #f4f4f4

.btn.success
  background-color #59CC00
  color #f4f4f4

.flex-row
  display flex
  flex-direction row
  align-items center

.flex-col
  display flex
  flex-direction column
  justify-content center

.App-logo
  animation App-logo-spin infinite 20s linear
  height 40vmin

.App-header
  background-color #282c34
  min-height 100vh
  display flex
  flex-direction column
  align-items center
  justify-content center
  font-size calc(10px + 2vmin)
  color white

.App-link
  color #61dafb

@keyframes App-logo-spin
  from
    transform rotate(0deg)

  to
    transform rotate(360deg)

.toast
  width 200px
  background-color #61dafb
  color #fff